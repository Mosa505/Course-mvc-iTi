@model Instructor
@{
    ViewData["Title"] = "NewInstructor";

    //SelectList Depts = new SelectList(ViewBag.DeptId, "Id", "Name");
}

<h1>Add Instructor</h1>

<form method="Post" action="/Instructor/SaveNEW">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Name">Name</label>
            <input type="text" class="form-control" name="Name" id="Name">
        </div>
        <div class="form-group col-md-6">
            <label for="Salary">Salary</label>
            <input type="text" class="form-control" name="Salary" id="Salary">
        </div>
    </div>
    <div class="form-group col-md-6">
        <label for="Address">Address</label>
        <input type="text" class="form-control" name="Address" id="Address">
    </div>
    <div class="form-group col-md-6">
        <label for="Imag">Imag</label>
        <input type="text" class="form-control" name="Imag" id="Imag">
    </div>
    <div class="form-group col-md-4">
        <label for="inputState"> Department Name </label>
       @*  <select name="Dept_Id" id="Dept_Id" class="form-control" asp-items="Depts" onchange="GetCourse()">
            <option value=0>---- Select Department ------</option>
          
        </select> *@
    </div>

    <div class="form-group col-md-4">
        <label for="inputState"> Course Name </label>
        <select name="Crs_Id" id="Crs_Id" class="form-control" >
           
        </select>
    </div>


    <br>
    <button type="submit" class="btn btn-primary"> Save </button>
</form>
@section Scripts {

    <script>

        function GetCourse()
        {

         var crs = document.getElementById("Dept_Id").value;
         console.log(crs);
         $.ajax({

             url: "/Instructor/CoursesOfDepartment?dept_Id="+crs,
              success: function(result)
              {
                  console.log(result);
                 document.getElementById("Crs_Id").innerHTML= result;
              }
         
         });
        }


    </script>

}

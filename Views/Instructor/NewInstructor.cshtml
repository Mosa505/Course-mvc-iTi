@model Instructor        
@{
    ViewData["Title"] = "NewInstructor";
}

<h1>Add Instructor</h1>

<form method="Post" action="/Instructor/SaveNEW">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Name">Name</label>
            <input type="text" class="form-control" name="Name" id="Name">
        </div>
        <div class="form-group col-md-6">
            <label for="Salary">Salary</label>
            <input type="text" class="form-control" name="Salary" id="Salary">
        </div>
    </div>
    <div class="form-group col-md-6">
        <label for="Address">Address</label>
        <input type="text" class="form-control" name="Address" id="Address">
    </div>
    <div class="form-group col-md-6">
        <label for="Imag">Imag</label>
        <input type="text" class="form-control" name="Imag" id="Imag" >
    </div>
    <div class="form-group col-md-4">
        <label for="inputState"> Department Name </label>
        <select name="Dept_Id" id="Dept_Id" class="form-control">
            <option selected></option>
            @foreach (Department DeptID in ViewBag.DeptId)
            {     
                <option value="@DeptID.Id" > @DeptID.Name</option> 
            }
        </select>
    </div>

    <div class="form-group col-md-4">
        <label for="inputState"> Course Name </label>
        <select name="Crs_Id" id="Crs_Id" class="form-control">
            <option selected></option>
            @foreach (Course Crsid in ViewBag.CourseId)
            {
                    <option value="@Crsid.Id"> @Crsid.Name</option>
            }
        </select>
    </div>
    <br>
    <button type="submit" class="btn btn-primary"> Save </button>
</form>
@model List<Instructor>
@{
    ViewData["Title"] = "Index";
}


<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
            <th scope="col">Department ID</th>
            <th scope="col">More Detail</th>
            <th scope="col">Edit</th>

        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.Dept_Id</td>
                <td>
                    <a href="/Instructor/Detail/@item.Id" style="background-color: gold; color: black; padding: 4px 5px; text-decoration: none; border: none; border-radius: 5px; display: inline-block;">
                        Show This Instructor
                    </a>
                </td>
                <td>
                    <a href="/Instructor/Edit/@item.Id"> Edit </a>
                </td>
               

            </tr>

        </tbody>
    }
</table>


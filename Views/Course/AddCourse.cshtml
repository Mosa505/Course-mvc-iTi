@model Course
@{
    ViewData["Title"] = "AddCourse";
    SelectList ListOfDepartment = new SelectList(ViewBag.ListOfDepartment,"Id","Name");
}

<form method="Post" asp-action="SaveNew" asp-controller="Course">
    <div asp-validation-summary="All" class="text-danger" ></div>
    <div class="form-group col-12">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group col-12">
        <label asp-for="Degree"></label>
        <input asp-for="Degree" class="form-control">
        <span asp-validation-for="Degree" class="text-danger"></span>
    </div>

    <div class="form-group col-12">
        <label asp-for="MinDegree"></label>
        <input asp-for="MinDegree" class="form-control">
        <span asp-validation-for="MinDegree" class="text-danger"></span>
    </div>

    <div class="form-group col-12">
        <label asp-for="Dept_Id"></label>
        <select asp-for="Dept_Id" asp-items="ListOfDepartment" class="form-control">
            <option value="0">Choose Department...</option>
        </select>
        <span asp-validation-for="Dept_Id" class="text-danger"></span>
    </div>

    <br>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
